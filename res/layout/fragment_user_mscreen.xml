<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garden_menue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.googlemapsemenara.UserMainScreen" >

    
    
   <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/locateusImage"
                android:layout_width="139dp"
                android:layout_height="60dp"
                android:onClick="showLocationOnMap"
                android:src="@drawable/locateusicone" />

            <ImageView
                android:id="@+id/resrvationImg"
                android:layout_width="138dp"
                android:layout_height="60dp"
                android:onClick="showReservationView"
                android:src="@drawable/resrvationicon" />

            <ImageView
                android:id="@+id/fullmenuImg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="showMenueView"
                android:src="@drawable/fullmenu" />

            <ImageView
                android:id="@+id/ContactusImage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="144dp"
                android:onClick="callAndContact"
                android:src="@drawable/contactusicon" />
        </LinearLayout>


</RelativeLayout>